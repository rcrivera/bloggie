<div class="panel panel-default">
    <div class="panel-heading">
        <h3>recent postz</h3>

    </div>
    <table class="table">
        <thead><tr><th>name</th><th>time</th><th>body</th><th></th><th></th></tr></thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= post.name %></td>
            <td><%=time_ago_in_words(post.created_at)%></td>
            <td><%= post.body %></td>
            <td><%= link_to 'show', post %></td>
          </tr>
        <% end %>
        </tbody>
    </table>

</div>